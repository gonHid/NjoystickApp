<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/changeReportarBug"
        android:layout_width="181dp"
        android:layout_height="96dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/njoyAzul"
        android:elevation="15dp"
        android:text="REPORTAR BUG"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenProducto"
        app:layout_constraintVertical_bias="0.265" />

    <Button
        android:id="@+id/changeAnnadirStock"
        android:layout_width="181dp"
        android:layout_height="96dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="176dp"
        android:backgroundTint="@color/njoyCeleste"
        android:elevation="15dp"
        android:text="AÃ‘ADIR STOCK"

        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenProducto"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/changeVenta"
        android:layout_width="181dp"
        android:layout_height="96dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/njoyAzul"
        android:elevation="15dp"
        android:text="VENTA"


        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenProducto"
        app:layout_constraintVertical_bias="0.034" />

    <Button
        android:id="@+id/changeVerStock"
        android:layout_width="181dp"
        android:layout_height="96dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/njoyCeleste"
        android:elevation="15dp"
        android:text="VER STOCK"

        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenProducto"
        app:layout_constraintVertical_bias="0.009" />

    <ImageView
        android:id="@+id/imagenProducto"
        android:layout_width="339dp"
        android:layout_height="413dp"
        android:layout_marginBottom="368dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/icononjoystick" />

</androidx.constraintlayout.widget.ConstraintLayout>